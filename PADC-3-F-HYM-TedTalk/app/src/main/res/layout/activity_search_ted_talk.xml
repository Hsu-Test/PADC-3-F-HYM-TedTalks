<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/accent"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_search_ted_talks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:hint="Search Ted Talks"
                android:textColorHint="@color/secondary_text" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_recommended_topics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardElevation="4dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_recommended_topics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/lb_recommended_topics"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_local_offer"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_topics"
                        android:layout_below="@id/tv_recommended_topics"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_local_offer_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_topic1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_recommended_topics"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_local_offer"
                        android:text="@string/lb_t1"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />

                    <ImageView
                        android:id="@id/iv_local_offer"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_topics"
                        android:layout_below="@id/tv_topic1"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_local_offer_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_topic2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_topic1"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_local_offer"
                        android:text="@string/lb_t2"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />

                    <ImageView
                        android:id="@id/iv_local_offer"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_topics"
                        android:layout_below="@id/tv_topic2"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_local_offer_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_topic3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_topic2"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_local_offer"
                        android:text="@string/lb_t3"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />


                    <TextView
                        android:id="@+id/tv_show_all_topics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_topic3"
                        android:layout_below="@id/tv_topic3"
                        android:layout_marginTop="@dimen/margin_medium_3"
                        android:text="@string/lb_show_all_topics"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_recommended_speakers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardElevation="4dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/tv_recommended_speakers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/lb_recommended_speakers"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_dummy_profile"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_speakers"
                        android:layout_below="@id/tv_recommended_speakers"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_local_offer_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_speaker1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_recommended_speakers"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_local_offer"
                        android:text="@string/lb_s1"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />

                    <ImageView
                        android:id="@id/iv_local_offer"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_speakers"
                        android:layout_below="@id/tv_speaker1"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_local_offer_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_speaker2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_speaker1"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_local_offer"
                        android:text="@string/lb_s2"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />

                    <ImageView
                        android:id="@id/iv_local_offer"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_speakers"
                        android:layout_below="@id/tv_speaker2"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_local_offer_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_speaker3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_speaker2"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_local_offer"
                        android:text="@string/lb_s3"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />


                    <TextView
                        android:id="@+id/tv_show_all_speakers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_speaker1"
                        android:layout_below="@id/tv_speaker3"
                        android:layout_marginTop="@dimen/margin_medium_3"
                        android:text="@string/lb_show_all_speakers"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold"
                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cv_recommended_subtitle_languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardElevation="4dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/tv_recommended_subtitle_languages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/lb_recommended_subtitle_lang"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_subtitle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_subtitle_languages"
                        android:layout_below="@id/tv_recommended_subtitle_languages"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_language_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_lang1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_recommended_subtitle_languages"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_subtitle"
                        android:text="@string/lb_lang1"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />

                    <ImageView
                        android:id="@id/iv_subtitle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_subtitle_languages"
                        android:layout_below="@id/tv_lang1"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_language_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_lang2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_lang1"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_subtitle"
                        android:text="@string/lb_lang2"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />

                    <ImageView
                        android:id="@id/iv_subtitle"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_subtitle_languages"
                        android:layout_below="@id/tv_lang2"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_language_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_lang3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_lang2"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_subtitle"
                        android:text="@string/lb_lang3"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />


                    <TextView
                        android:id="@+id/tv_show_all_subtitle_languages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_lang1"
                        android:layout_below="@id/tv_lang3"
                        android:layout_marginTop="@dimen/margin_medium_3"
                        android:text="@string/lb_show_all_subtitle_lang"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold"
                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_recommended_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                app:cardElevation="4dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/tv_recommended_events"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/lb_recommended_events"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_events"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_events"
                        android:layout_below="@id/tv_recommended_events"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_event_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_e1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_recommended_events"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_events"
                        android:text="@string/lb_e1"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />

                    <ImageView
                        android:id="@id/iv_events"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_events"
                        android:layout_below="@id/tv_e1"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_event_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_e2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_e1"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_events"
                        android:text="@string/lb_e2"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />

                    <ImageView
                        android:id="@id/iv_events"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignLeft="@id/tv_recommended_events"
                        android:layout_below="@id/tv_e2"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:src="@drawable/ic_event_24dp"
                        android:tint="@color/primary_dark" />

                    <TextView
                        android:id="@+id/tv_e3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_e2"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_toRightOf="@id/iv_events"
                        android:text="@string/lb_e3"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_2x" />


                    <TextView
                        android:id="@+id/tv_show_all_events"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/tv_e1"
                        android:layout_below="@id/tv_e3"
                        android:layout_marginTop="@dimen/margin_medium_3"
                        android:text="@string/lb_show_all_events"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold"
                        />
                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>



</android.support.design.widget.CoordinatorLayout>